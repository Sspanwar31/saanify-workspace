// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL") // used for migrations
  schemas   = ["public", "auth"] // Correctly set for Supabase
}

// --------------------------------------------------------------------
// AUTH SCHEMA (FROM SUPABASE) - DO NOT MIGRATE
// --------------------------------------------------------------------

// Minimal definition of Supabase's auth.users table
// This allows Prisma to understand the relation from the Profile model
model users {
  id      String   @id @db.Uuid
  profile Profile? // This is the back-relation to your Profile table

  @@map("users")
  @@schema("auth")
}

// --------------------------------------------------------------------
// CORE MODELS FOR YOUR SAAS PROJECT (IN PUBLIC SCHEMA)
// --------------------------------------------------------------------

// Model 1: Profiles (for all users, linked to Supabase Auth)
model Profile {
  id         String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  auth_id    String   @unique @db.Uuid // This field holds the foreign key
  email      String   @unique
  full_name  String?
  avatar_url String?
  role       String   @default("member")
  createdAt  DateTime @default(now()) @db.Timestamptz
  updatedAt  DateTime @updatedAt @db.Timestamptz

  // This defines the foreign key relationship to the auth.users table
  auth_user users @relation(fields: [auth_id], references: [id], onDelete: Cascade)

  // Relation to the SocietyMember table
  memberships SocietyMember[]

  @@map("profiles")
}

// Model 2: Society (also known as Organization or Team)
model Society {
  id          String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name        String
  description String?
  createdAt   DateTime @default(now()) @db.Timestamptz
  updatedAt   DateTime @updatedAt @db.Timestamptz

  // Relation to the SocietyMember table
  members SocietyMember[]

  @@map("societies")
}

// Model 3: SocietyMember (Junction table for Profile and Society)
model SocietyMember {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  profileId String   @db.Uuid
  societyId String   @db.Uuid
  role      String   @default("member")
  createdAt DateTime @default(now()) @db.Timestamptz

  // Relations to Profile and Society tables
  profile Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)
  society Society @relation(fields: [societyId], references: [id], onDelete: Cascade)

  @@unique([profileId, societyId]) // A user can only have one role per society
  @@map("society_members")
}

// Model 4: Automation Tasks
model AutomationTask {
  id              String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  task_name       String    @unique
  description     String?
  schedule        String    @default("manual")
  enabled         Boolean   @default(true)
  last_run_status String?
  last_run_at     DateTime? @db.Timestamptz
  createdAt       DateTime  @default(now()) @db.Timestamptz
  updatedAt       DateTime  @updatedAt @db.Timestamptz

  // Relation to logs generated by this task
  logs AutomationLog[]

  @@map("automation_tasks")
}

// Model 5: Automation Logs
model AutomationLog {
  id          String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  taskId      String?  @db.Uuid // Foreign key field
  task_name   String?
  status      String
  message     String?
  details     Json?    @db.JsonB
  duration_ms Int?
  run_time    DateTime @default(now()) @db.Timestamptz

  // Relation to the parent task
  task AutomationTask? @relation(fields: [taskId], references: [id], onDelete: SetNull)

  @@map("automation_logs")
}

// Model 6: Automation Settings
model AutomationSetting {
  id          String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  key         String   @unique
  value       Json?    @db.JsonB
  description String?
  group       String?
  createdAt   DateTime @default(now()) @db.Timestamptz
  updatedAt   DateTime @updatedAt @db.Timestamptz

  @@map("automation_settings")
}
