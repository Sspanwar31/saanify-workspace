// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL") // used for migrations
  schemas   = ["public", "auth"] // <-- IMPORTANT FIX for Supabase integration
}

// --------------------------------------------------------------------
// CORE MODELS FOR YOUR SAAS PROJECT
// --------------------------------------------------------------------

// Model 1: Profiles (for all users, linked to Supabase Auth)
model Profile {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  auth_id   String   @unique @db.Uuid // This links to auth.users.id
  email     String   @unique
  full_name String?
  avatar_url String?
  role      String   @default("member") // System-level role: 'superadmin', 'admin', 'member'
  createdAt DateTime @default(now()) @db.Timestamptz
  updatedAt DateTime @updatedAt @db.Timestamptz

  // Relation to societies this user is a member of
  memberships SocietyMember[]

  @@map("profiles")
}

// Model 2: Society (also known as Organization or Team)
// Represents a tenant in your multi-tenant SaaS.
model Society {
  id          String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name        String
  description String?
  createdAt   DateTime @default(now()) @db.Timestamptz
  updatedAt   DateTime @updatedAt @db.Timestamptz

  // Relation to members of this society
  members SocietyMember[]

  @@map("societies")
}

// Model 3: SocietyMember (Junction table for Profile and Society)
// Defines the relationship and role of a user within a society.
model SocietyMember {
  id        String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  profileId String @db.Uuid
  societyId String @db.Uuid
  // Role within the society: 'admin', 'treasurer', 'member'
  role      String @default("member")

  profile   Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)
  society   Society @relation(fields: [societyId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now()) @db.Timestamptz

  @@unique([profileId, societyId]) // A user can only join a society once
  @@map("society_members")
}

// Model 4: Automation Tasks (for your SuperAdmin UI)
model AutomationTask {
  id              String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  task_name       String    @unique
  description     String?
  schedule        String    @default("manual") // e.g., "manual", "daily", "hourly"
  enabled         Boolean   @default(true)
  last_run_status String?   // 'success', 'failed'
  last_run_at     DateTime? @db.Timestamptz
  createdAt       DateTime  @default(now()) @db.Timestamptz
  updatedAt       DateTime  @updatedAt @db.Timestamptz

  // Relation to logs generated by this task
  logs AutomationLog[]

  @@map("automation_tasks")
}

// Model 5: Automation Logs (to record the result of each task run)
model AutomationLog {
  id          String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  taskId      String?  @db.Uuid // Foreign key to AutomationTask
  task_name   String?
  status      String   // 'success', 'failed', 'running'
  message     String?
  details     Json?    @db.JsonB
  duration_ms Int?
  run_time    DateTime @default(now()) @db.Timestamptz

  // Relation to the parent task
  task AutomationTask? @relation(fields: [taskId], references: [id], onDelete: SetNull)

  @@map("automation_logs")
}

// Model 6: Automation Settings (for system-wide settings like 'setup_mode')
model AutomationSetting {
  id          String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  key         String   @unique
  value       Json?    @db.JsonB
  description String?  // Explains what this setting does
  group       String?  // To group settings together, e.g., 'billing', 'notifications'
  createdAt   DateTime @default(now()) @db.Timestamptz
  updatedAt   DateTime @updatedAt @db.Timestamptz

  @@map("automation_settings")
}
