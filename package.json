{
  "name": "nextjs_tailwind_shadcn_ts",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "nodemon --exec \"npx tsx server.ts\" --watch server.ts --watch src --ext ts,tsx,js,jsx",
    "build": "next build",
    "start": "NODE_ENV=production tsx server.ts",
    "lint": "next lint",
    "db:push": "prisma db push",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:reset": "prisma migrate reset",
    "db:seed": "npx tsx prisma/seed.ts",
    "db:migrate:deploy": "npx prisma migrate deploy",
    "db:create-admin": "node scripts/create_admins.js",
    "deploy:glm": "node scripts/deploy-glm.js",
    "restore:glm": "node scripts/restore-glm.js",
    "backup:glm": "node scripts/deploy-glm.js --backup-only",
    "health:glm": "node scripts/health-check-glm.js",
    "vercel:sync": "node scripts/vercel-env-sync.js",
    "supabase:setup": "npm run vercel:sync && npm run db:migrate:deploy && npm run db:seed",
    "supabase:migrate": "node scripts/supabase-migrate.js",
    "test:supabase-local": "node scripts/test-supabase-local.js"
  }
}
